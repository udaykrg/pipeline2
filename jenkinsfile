pipeline {
  agent none
  stages {
    stage ('build') {
    agent { label 'master'}
       steps {
          sh '''
                  echo "this is build stage"
                  sleep 2
             '''
             }
    }
    stage ('deploy') {
    agent { label 'slave-02' }
       steps {
          sh '''
                  echo "this is deploy stage"
                  sleep 2
             '''
             }
    }
    stage ('deploy') {
     agent parallel
       steps {
          sh '''
                  echo "this is deploy stage"
                  sleep 2
             '''
             }
    }
    stage ('test') {
    agent master
       steps {
          sh '''
                  echo "this is test stage"
                  sleep 2
             '''
             }
    }
  }
}
