pipeline{
  agent any
      stages{
          stage ('build'){
              step{ 
                sh '''
                  echo "this is build stage"
                  sleep 2
                  '''
                  }
                }
          stage ('deploy'){
              step{ 
                sh '''
                  echo "this is deploy stage"
                  sleep 2
                  '''
                  }
                  }
           stage ('test'){
              step{ 
                sh '''
                  echo "this is test stage"
                  sleep 2
                  '''
                  }
          }
  }

}
